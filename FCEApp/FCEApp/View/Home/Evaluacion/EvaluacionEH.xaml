<?xml version="1.0" encoding="utf-8" ?>
<bnb:BottomBarPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:z="clr-namespace:Zumero;assembly=Zumero.DataGrid"
             x:Class="FCEApp.View.Home.Evaluacion.EvaluacionEH"
             xmlns:bnb="clr-namespace:BottomBar.XamarinForms;assembly=BottomBar.XamarinForms"
             Title="Evaluación Equipo-Herramienta">
 <ContentPage Title="Herramientas" Icon="herramienta.png"
                 bnb:BottomBarPageExtensions.TabColor="#00A062">
        <z:DataGrid x:Name="datagrid">
            <z:DataGrid.Columns>
                <z:Column>
                    <z:Column.HeaderView>
                        <Label Text="Código" BackgroundColor="#f4f4f2" TextColor="#00A062" FontSize="Small" HorizontalTextAlignment="Center"></Label>
                    </z:Column.HeaderView>
                    <z:Column.Template>
                        <DataTemplate>
                            <Label Text="{Binding CodigoHerramienta}" FontSize="Micro"></Label>
                        </DataTemplate>
                    </z:Column.Template>
                </z:Column>
                <z:Column>
                    <z:Column.HeaderView>
                        <Label Text="Descripción" BackgroundColor="#f4f4f2" TextColor="#00A062" FontSize="Small" HorizontalTextAlignment="Center"></Label>
                    </z:Column.HeaderView>
                    <z:Column.Template>
                        <DataTemplate>
                            <Label Text="{Binding DescripcionHerramienta}" FontSize="Micro"></Label>
                        </DataTemplate>
                    </z:Column.Template>
                </z:Column>
                <z:Column>
                    <z:Column.HeaderView>
                        <Label Text="Unidad" BackgroundColor="#f4f4f2" TextColor="#00A062" FontSize="Small" HorizontalTextAlignment="Center"></Label>
                    </z:Column.HeaderView>
                    <z:Column.Template>
                        <DataTemplate>
                            <Label Text="{Binding UnidadHerramienta}" FontSize="Micro"></Label>
                        </DataTemplate>
                    </z:Column.Template>
                </z:Column>
                <z:Column>
                    <z:Column.HeaderView>
                        <Label Text="Cantidad" BackgroundColor="#f4f4f2" TextColor="#00A062" FontSize="Small" HorizontalTextAlignment="Center"></Label>
                    </z:Column.HeaderView>
                    <z:Column.Template>
                        <DataTemplate>
                            <Label Text="{Binding CantidadHerramienta}" FontSize="Micro"></Label>
                        </DataTemplate>
                    </z:Column.Template>
                </z:Column>
                <z:Column>
                    <z:Column.HeaderView>
                        <Label Text="Mal estado" BackgroundColor="#f4f4f2" TextColor="#00A062" FontSize="Small" HorizontalTextAlignment="Center"></Label>
                    </z:Column.HeaderView>
                    <z:Column.Template>
                        <DataTemplate>
                            <Entry Text="{Binding MalEstadoHerramienta}" FontSize="Micro"></Entry>
                        </DataTemplate>
                    </z:Column.Template>
                </z:Column>
                <z:Column>
                    <z:Column.HeaderView>
                        <Label Text="Observaciones" BackgroundColor="#f4f4f2" TextColor="#00A062" FontSize="Small" HorizontalTextAlignment="Center"></Label>
                    </z:Column.HeaderView>
                    <z:Column.Template>
                        <DataTemplate>
                            <Picker>
                                <Picker.Items>
                                    <x:String>Se rompió</x:String>
                                    <x:String>Mantenimiento</x:String>
                                </Picker.Items>
                            </Picker>
                            <!--<Label Text="{Binding ObservacionesHerramienta}" FontSize="Micro"></Label>-->
                        </DataTemplate>
                    </z:Column.Template>
                </z:Column>
                <z:Column>
                    <z:Column.HeaderView>
                        <Label Text="Faltante" BackgroundColor="#f4f4f2" TextColor="#00A062" FontSize="Small" HorizontalTextAlignment="Center"></Label>
                    </z:Column.HeaderView>
                    <z:Column.Template>
                        <DataTemplate>
                         <Entry Text="{Binding FaltanteHerramienta}" FontSize="Micro"></Entry>
                        </DataTemplate>
                    </z:Column.Template>
                </z:Column>
                <z:Column>
                    <z:Column.HeaderView>
                        <Label Text="Observaciones" BackgroundColor="#f4f4f2" TextColor="#00A062" FontSize="Small" HorizontalTextAlignment="Center"></Label>
                    </z:Column.HeaderView>
                    <z:Column.Template>
                        <DataTemplate>
                            <Picker>
                                <Picker.Items>
                                    <x:String>Se perdió</x:String>
                                </Picker.Items>
                            </Picker>
                        </DataTemplate>
                    </z:Column.Template>
                </z:Column>
                <z:Column>
                    <z:Column.HeaderView>
                        <Label Text="Guardar" BackgroundColor="#f4f4f2" TextColor="#00A062" FontSize="Small" HorizontalTextAlignment="Center"></Label>
                    </z:Column.HeaderView>
                    <z:Column.Template>
                        <DataTemplate>
                            <Switch Toggled="SwitchGuardar_OnChanged"></Switch>
                          </DataTemplate>
                    </z:Column.Template>
                </z:Column>
            </z:DataGrid.Columns>
        </z:DataGrid>

    </ContentPage>
