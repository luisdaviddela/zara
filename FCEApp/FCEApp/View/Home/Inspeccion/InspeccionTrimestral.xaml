                        </z:Column.HeaderView>
                        <z:Column.Template>
                            <DataTemplate>
                                <Entry Text="{Binding MalEstadoHerramienta}" FontSize="Micro"></Entry>
                            </DataTemplate>
                        </z:Column.Template>
                    </z:Column>
                    <z:Column>
                        <z:Column.HeaderView>
