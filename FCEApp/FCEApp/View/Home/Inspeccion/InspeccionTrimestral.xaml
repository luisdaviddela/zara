                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ListView x:Name="listViewH" 
                      SelectedItem="{Binding SelcetedItem,Mode=TwoWay}" 
                      ItemSelected="EvetClicked"
              RowHeight="120" 
              BackgroundColor="White" >
